{
  "database": {
    "rules": "database.rules.json"
  },
  "hosting": {
    "public": "dist/fitness-portal",
    "ignore": [
      "**/.*",
      "src/**/.*",
      "firebase.json",
      "database.rules.json",
      "package.json",
      "package-lock.json",
      "README.md",
      "tsconfig.json",
      "tsconfig.app.json",
      "tsconfig.spec.json",
      "tslint.json",
      "browserslist",
      "angular.json",
      "karma.conf.js",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
